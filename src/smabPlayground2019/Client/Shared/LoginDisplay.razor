@if (Visible)
{
	if (NavMenu)
	{
		<AuthorizeView>
			<Authorized>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="Manage">
						<span class="oi oi-person" aria-hidden="true"></span> @context.User.Identity.Name
					</NavLink>
				</li>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="Logout">
						<span class="oi oi-account-logout" aria-hidden="true"></span> Log out
					</NavLink>
				</li>
			</Authorized>
			<NotAuthorized>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="Register">
						<span class="oi oi-person" aria-hidden="true"></span> Register
					</NavLink>
				</li>
				<li class="nav-item px-3">
					<NavLink class="nav-link" href="Login">
						<span class="oi oi-account-login" aria-hidden="true"></span> Log in
					</NavLink>
				</li>
			</NotAuthorized>
		</AuthorizeView>
	}
	else
	{
		<AuthorizeView>
			<Authorized>
				<a href="Manage"><span class="oi oi-person" aria-hidden="true"></span>@context.User.Identity.Name</a>
				<a href="LogOut">Log out</a>
			</Authorized>
			<NotAuthorized>
				<a href="Register">Register</a>
				<a href="Login">Log in</a>
			</NotAuthorized>
		</AuthorizeView>
	}
}

@code {
	[Parameter] public bool Visible { get; set; } = true;
	[Parameter] public bool NavMenu { get; set; } = false;
}
